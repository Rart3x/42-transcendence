generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "postgresql://kramjatt:123@localhost:5432/PMU"
}

model Admin {
  adminId      Int            @id @default(autoincrement())
  ChannelAdmin ChannelAdmin[]
}

model Channel {
  channelId       Int               @id @default(autoincrement())
  ChannelAdmin    ChannelAdmin[]
  Message Message[]
}

model ChannelAdmin {
  adminId   Int
  channelId Int
  Admin     Admin   @relation(fields: [adminId], references: [adminId], onDelete: NoAction, onUpdate: NoAction)
  Channel   Channel @relation(fields: [channelId], references: [channelId], onDelete: NoAction, onUpdate: NoAction)

  @@id([adminId, channelId])
}

model Game {
  gameId Int @id @default(autoincrement())
}

model Message {
  messageId    Int       @id @default(autoincrement())
  channelId    Int?
  message_text String
  message_date DateTime? @default(now()) @db.Timestamp(6)
  Channel      Channel?  @relation(fields: [channelId], references: [channelId], onDelete: NoAction, onUpdate: NoAction)
}

model User {
  userId   Int     @id @default(autoincrement())
  userName String?
  image    String?
  socketId String
  roomId   Int?
  room     GameRoom? @relation(fields: [roomId], references: [roomId])
  queueId  Int?
  queue    QueueList? @relation(fields: [queueId], references: [queueId])
}

model QueueList {
  queueId Int      @id @default(autoincrement())
  users   User[]
}

model GameRoom{
  roomId Int       @id @default(autoincrement())
  players User[]
}

